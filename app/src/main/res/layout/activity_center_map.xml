<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_center_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.center.CenterMapActivity">

<androidx.fragment.app.FragmentContainerView
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.center.CenterMapActivity" />


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="#1E1E1E"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="10dp"
        android:elevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintStart_toEndOf="@id/vertical_middle"
                android:background="@null"
                android:src="@drawable/ic_favorite_border"
                android:onClick="onSaveAction"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vertical_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.9" />

            <TextView
                android:id="@+id/text_center_title"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/vertical_middle"
                android:text="Public Safety Communication Manager"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/icon_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location"
                android:tint="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="@id/text_center_title"
                app:layout_constraintEnd_toStartOf="@id/text_center_address"
                app:layout_constraintTop_toTopOf="@id/text_center_address"
                app:layout_constraintBottom_toBottomOf="@id/text_center_address"/>

            <TextView
                android:id="@+id/text_center_address"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="8dp"
                app:layout_constraintEnd_toEndOf="@id/text_center_title"
                app:layout_constraintStart_toEndOf="@id/icon_address"
                app:layout_constraintTop_toBottomOf="@id/text_center_title"
                android:text="3150 Lenox Park Blvd Suite 108 \nMemphis, TN 38115"
                android:textStyle="italic"/>

            <ImageView
                android:id="@+id/icon_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone"
                android:tint="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="@id/icon_address"
                app:layout_constraintEnd_toEndOf="@id/icon_address"
                app:layout_constraintTop_toTopOf="@id/text_center_phone"
                app:layout_constraintBottom_toBottomOf="@id/text_center_phone"/>

            <TextView
                android:id="@+id/text_center_phone"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="8dp"
                android:autoLink="phone"
                android:textColorLink="#00A2ED"
                app:layout_constraintEnd_toEndOf="@id/text_center_title"
                app:layout_constraintStart_toEndOf="@id/icon_address"
                app:layout_constraintTop_toBottomOf="@id/text_center_address"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="650-329-2114" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:clickable="true"
        android:layout_margin="14dp"
        android:backgroundTint="#1E1E1E"
        android:onClick="onBackAction"
        android:src="@drawable/ic_arrow_left"
        app:borderWidth="0dp"
        app:fabSize="mini"
        app:elevation="8dp"
        app:tint="@color/colorPrimary" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="18dp"
        android:backgroundTint="#1E1E1E"
        android:layout_gravity="top|center"
        app:cardCornerRadius="20dp"
        android:elevation="8dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:src="@drawable/logo_purple"/>
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>